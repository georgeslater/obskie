        <div class="contentWrapper">
            <section id="leftPanel">
                <div class="postContent">
                    <div class="postTitle">
                        <div class="albumArt">
                            <img src="<%= @album.album_art %>" />
                        </div>
                        <div class="albumTitle">                                       
                            <div class="albumHeader">
                                <h2><%= @album.title %></h2>
                                <h5><%= @album.artist.name %></h5>
                                <h4><%= @album.year %></h4>
                                <div class="streamBuyLinks">                           
                                    <a href="spotify:album:<%= @album.spotify_identifier %>" title="Stream Album on Spotify">
                                        <span class="spotify albumLinkIcons"></span>
                                    </a>
                                    <a href="spotify:album:4lxW0axOKlImAQ0akMRz61" title="Stream Album on Spotify">
                                        <span class="spotify albumLinkIcons"></span>
                                    </a>
                                    <a href="spotify:album:4lxW0axOKlImAQ0akMRz61" title="Stream Album on Spotify">
                                        <span class="spotify albumLinkIcons"></span>
                                    </a>
                                </div>
                            </div>
                            <div id="authorInfo">
                                <div id="authorPhoto">
                                    <img src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQ2Xo6K6h_rnk2tI55QYW66PSvPkvkY0kcrcanC1_aWjgQNwIRF" width="50px" height="50px"></img>
                                </div>
                                <div class="authorDetail">
                                    <%= link_to @album.user.username, user_path(@album.user.id), :title => "Profile page", :class => "authorName" %>
                                    <br />
                                    <a href="#seeReviews" style="margin-top: 6px; display: block;" title="5 Reviews">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                        <span id="authorNumReviews">
                                            <%= @album.user.albums.size %>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>                            
                    </div>
                    <div class="content">
                        <article>
                            <%= @album.body %>
                        </article>
                    </div>
                    <hr />
                    <div id="relatedPosts">
                        <%= render 'relatedAlbums' %>
                    </div>
                    <br />
                    <br />
                    <br />
                </div>                             
            </section>
            <section class="rightPanel">
                <div class="albumInfo">
                    <%= render "ratings" %>
                    <%= render "sidebar" %>
                </div>
            
        </section>
        <footer>
                Footer will go here.
        </footer>   
<%= javascript_include_tag "jquery.raty" %>
<%= stylesheet_link_tag "jquery.raty" %>
