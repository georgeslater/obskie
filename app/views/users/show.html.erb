<div id="userWrapper">
	
	<div style="float:left; margin-right: 10px;">
		<%= image_tag @user.avatar.url(:thumb) %>
	</div>

	<h4><%= @user.first_name %> <%= @user.last_name %></h4>

	<ul>
		<li>Date Joined: <%= @user.created_at.strftime("%A, %d %b %Y") %></li>
	</ul>

	<div>
		<a href="#reviews">Reviews (<%= @user.albums.size %>)</a>
	</div>
	<div>
		<a href="#comments">Comments (<%= @user.comments.size %>)</a>
	</div>
	<div>
		<a href="#playlists">Playlists (<%= @user.playlists.size %>)</a>
	</div>
	<table class="table">
		<thead>
			<tr>
				<td>Name</td>
				<td>Submitted Date</td>
				<td>Average Track Rating</td>
			</tr>
		</thead>
		<tbody>
			<% @user.albums.each do | album | %>
				<tr>
					<td><%= link_to album.title, artist_album_path(album.artist, album) %></td>
					<td><%= album.created_at.strftime("%d %b %Y") %></td>
					<td><%= avg_track_rating(album.tracks) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>