<%= form_for(@playlist) do |f| %>
  <% if @playlist.errors.any? %>
    <%= render 'shared/errorMessages', object: @playlist %>
  <% end %>
 <div class="field checkboxes">
    <label>Playlist service (at least one)</label>
    <span>
      <input type="checkbox" class="playlistTypeCb" data-type="spotify" />
      <label>Spotify</label>
    </span>
    <span>
      <input type="checkbox" class="playlistTypeCb" data-type="deezer" />
      <label>Deezer</label>
    </span>
    <span>
      <input type="checkbox" class="playlistTypeCb" data-type="rdio" />
      <label>Rdio</label>
    </span>
  </div>
  <div id="spotifySection" class="field">
    <%= f.label "Spotify URI" %><br>
    <%= f.text_field :spotify_uri %>
    <p class="help-block">To get the Spotify URI, go to the Playlist in Spotify Desktop, click on the "..." button and select "Copy Spotify URI".  It should look something like this: spotify:user:joebloggs:playlist:3I5PiqsI5OQh83gbG6PRJH</p>
  </div>
  <div id="deezerSection" class="field">
    <%= f.label "Deezer Playlist Id" %><br>
    <%= f.text_field :deezer_uri %>
    <p class="help-block">The Deezer playlist id is the number at the end of the URL.  For example, the id for a playlist with the URL as "http://www.deezer.com/playlist/515330663" would be 515330663.</p>
  </div>
  <div id="rdioSection" class="field">
    <%= f.label "Rdio Playlist URI" %><br>
    <%= f.text_field :rdio_uri %>
    <p class="help-block">To get the Rdio Playlist URI, click on the share button below the picture and copy the URI next to "Share this Playlist" in the popup.  It should look something like: http://rd.io/x/Rl70vrIvTk2I/ </p>
    <%= f.label "Playlist Title" %><br>
    <%= f.text_field :name %>
  </div>
  <br />
  <div class="field">
    <%= f.label "Explain what you like about this playlist" %><br>
    <%= f.text_area :blurb, :cols => "100", :rows => "10" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
