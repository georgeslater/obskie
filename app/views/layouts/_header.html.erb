
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">        
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menuContent">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="title">
                        <a id="obscureIcon" href="/">
                            <span class="icon"></span>
                            <h1>bscure albums</h1>
                            <sup>beta!</sup>
                        </a>
                    </div>
                </div>
                <div id="menuContent" class="collapse navbar-collapse">
                    <div id="siteLinks">
                        <ul id="menuBar" class="nav navbar-nav">
                            <li class="<%= 'activeTab' if current_page?(albums_path) || current_page?(root_path) %>">
                                <%= link_to "Albums", albums_path %>
                            </li>
                            <li class="<%= 'activeTab' if current_page?(artists_path) %>">
                                <%= link_to "A-Z", artists_path %>
                            </li>
                            <li class="<%= 'activeTab' if current_page?(playlists_path) %>">
                                <%= link_to "Playlists", playlists_path %>
                            </li>

                            <!--<li>
                                <%= link_to "Forum", forem_path %>
                            </li>-->
                        </ul>
                    </div>
                    <div>
                        <div class="loginInfo">
                            <% if user_signed_in? %>
                                <div class="loginInfoMenu">
                                    <div class="displayNameArrow">
                                        <div class="displayName">
                                            <% if current_user.avatar.present? %>
                                                <%= image_tag current_user.avatar.url(:thumb), size: "24x24", class: "avatarImage" %>
                                            <% end %>
                                            <%= current_user.username %>
                                        </div>
                                        <div class="loginInfoArrowIcon"></div>
                                    </div>
                                    <div id="userMenu">
                                        <div>
                                            <%= link_to new_album_path do %>
                                                <div class="menuRow">Submit a Review</div>
                                            <% end %>
                                        </div>
                                        <div>
                                            <%= link_to user_path(current_user) do %>
                                                <div class="menuRow">My Reviews</div>
                                            <% end %>
                                        </div>
                                        <% if @hasDrafts %>
                                            <div>
                                                <%= link_to my_drafts_path(current_user) do %>
                                                    <div class="menuRow">My Drafts</div>
                                                <% end %>
                                            </div>
                                        <% end %>
                                        <div>
                                            <%= link_to edit_user_registration_path(current_user) do %> 
                                                <div class="menuRow">Edit Profile</div>
                                            <% end %>
                                        </div>
                                        <div>
                                            <%= link_to destroy_user_session_path, method: :delete   do %>
                                                    <div class="menuRow">Sign Out</div>
                                            <% end %>
                                        </div>

                                    </div>
                                </div>
                            <% else %>
                                <%= render 'devise/shared/login' %>
                            <% end %> 
                        </div>
                    </div>
                </div>               
            </div>
        </nav>
    </header>
