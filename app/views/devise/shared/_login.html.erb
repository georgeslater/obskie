<div id="loginForm">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	    <div>
		    <div class="login">
		      <%= f.text_field :login, autofocus: true, placeholder: "Username", class: "loginField" %>
		    </div>
		    <div class="login">
		      	<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "loginField" %>
		    </div>
		    <div class="login">
		      <%= f.submit "Login", class: "loginButton" %>
		    </div>
		</div>
		<div class="loginLinks">
			<%= link_to "New user?  Register here", new_registration_path(resource_name)%>
			<%= link_to "Forgot password", new_password_path(resource_name), class: "forgotPasswordLink" %>
		</div>
	<% end %>
</div>